@using Misfits.Models.Data
@model Misfits.Models.Data.DogFoodModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <hr />
    <dl class="row">
        <dd class="col-sm-10">
            <img class="rounded-circle" src="@Model.ImageURL" alt="@Model.ImageURL"
                 style="max-width: 100px">
        </dd>
        <dd>
            Name: 
            @Html.DisplayFor(model => model.DogFoodName)
        </dd>
        <dd>
            Description: 
            @Html.DisplayFor(model => model.Description)
        </dd>
      <dd>
           Ingredients:
            @Html.DisplayFor(model => model.Ingredients);
        </dd>
        <dd>
           Company: 
            @Html.DisplayFor(model => model.ProductionCompany)
        </dd>
    </dl>
    <h1>
        <strong>Reviews:</strong>  _______________________________________________________________________

    </h1>
    <ul>
        @foreach (ReviewModel review in Model.Reviews)
        {
            <li><strong>@review.ReviewerName: </strong> @review.Review</li>


        }
    </ul>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
